---
interface Props {
  title: string;
  description: string;
  image: string;
  datePublished: Date | string;
  dateModified?: Date | string;
  author: string;
  url: string;
}

const { title, description, image, datePublished, dateModified, author, url } = Astro.props;

const publishedDate = new Date(datePublished);
const modifiedDate = dateModified ? new Date(dateModified) : publishedDate;

const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": image.startsWith('http') ? image : `https://rprowashnc.com${image}`,
  "datePublished": publishedDate.toISOString(),
  "dateModified": modifiedDate.toISOString(),
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Reimagine Pro Wash & More",
    "logo": {
      "@type": "ImageObject",
      "url": "https://rprowashnc.com/images/logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": url
  }
};
---

<script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />
