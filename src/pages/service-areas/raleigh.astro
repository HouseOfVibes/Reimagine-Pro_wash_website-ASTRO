    background: white;
  }

  .why-raleigh h2 {
    font-size: 2.5rem;
    color: #003366;
    text-align: center;
    margin-bottom: 60px;
    font-weight: bold;
    font-family: 'Open Sans', sans-serif;
  }

  .why-grid {
