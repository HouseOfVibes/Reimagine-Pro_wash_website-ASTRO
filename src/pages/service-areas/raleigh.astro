    font-weight: 600;
    margin-top: 30px;
  }

  .city-cta {
    padding: 100px 20px;
    background: linear-gradient(135deg, #092441 0%, #0862b7 100%);
    color: white;
    text-align: center;
  }

  .city-cta h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-weight: bold;
    font-family: 'Open Sans', sans-serif;
  }

  .city-cta p {
    font-size: 1.2rem;
    margin-bottom: 40px;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .satisfaction {
    font-size: 1.05rem;
    opacity: 0.9;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .city-hero h1 {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .local-intro h2,
    .city-services h2,
    .why-raleigh h2,
    .city-cta h2 {
