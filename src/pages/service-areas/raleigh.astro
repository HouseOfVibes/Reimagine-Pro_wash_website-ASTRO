</Layout>

<style>
  .city-page {
    min-height: 100vh;
  }

  .city-hero {
    position: relative;
    background: linear-gradient(135deg, #092441 0%, #0862b7 50%, #00a1f0 100%);
    color: white;
    padding: 140px 20px 80px;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .breadcrumb {
    font-size: 0.9rem;
    margin-bottom: 20px;
    opacity: 0.9;
  }

  .breadcrumb a {
    color: white;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .breadcrumb a:hover {
    opacity: 0.7;
  }

  .breadcrumb span {
    opacity: 0.7;
  }

  .city-hero h1 {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 20px;
    font-family: 'Open Sans', sans-serif;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    margin-bottom: 35px;
    opacity: 0.95;
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary, .btn-secondary {
    padding: 15px 40px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    font-size: 1.05rem;
  }

  .btn-primary {
    background: white;
    color: #092441;
  }

  .btn-primary:hover {
    background: #00a1f0;
    color: white;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: white;
    color: #092441;
    transform: translateY(-2px);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .local-intro {
    padding: 100px 20px;
    background: white;
  }

  .local-intro h2 {
    font-size: 2.5rem;
    color: #003366;
    margin-bottom: 30px;
    font-weight: bold;
    font-family: 'Open Sans', sans-serif;
    text-align: center;
  }

  .local-intro p {
    font-size: 1.15rem;
    color: #666;
    line-height: 1.8;
    margin-bottom: 20px;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .city-services {
    padding: 100px 20px;
    background: #f8f9fa;
  }

  .city-services h2 {
    font-size: 2.5rem;
    color: #003366;
    text-align: center;
    margin-bottom: 60px;
    font-weight: bold;
    font-family: 'Open Sans', sans-serif;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: white;
    padding: 35px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .service-card h3 {
    font-size: 1.5rem;
    color: #003366;
    margin-bottom: 15px;
    font-weight: bold;
