---
import HomeLayout from '../../layouts/HomeLayout.astro';

const cities = [
  {
    name: "Knightdale, NC",
    slug: "knightdale",
    description: "Our home base serving residential and commercial properties with professional pressure washing",
    zip: "27545"
  },
  {
    name: "Raleigh, NC",
    slug: "raleigh",
    description: "Comprehensive pressure washing throughout North Carolina's capital city",
    zip: "27601"
  },
  {
    name: "Cary, NC",
    slug: "cary",
    description: "Trusted pressure washing services for Cary's homes and businesses",
    zip: "27511"
  },
  {
    name: "Wake Forest, NC",
    slug: "wake-forest",
    description: "Professional exterior cleaning for Wake Forest properties",
    zip: "27587"
  },
  {
    name: "Clayton, NC",
    slug: "clayton",
    description: "Expert pressure washing serving Clayton and surrounding communities",
    zip: "27520"
  }
];
---

<HomeLayout
  isHomepage={false}
  title="Service Areas | Professional Pressure Washing | Knightdale, Raleigh, Cary, Wake Forest, Clayton NC"
  description="Reimagine Pro Wash serves Knightdale, Raleigh, Cary, Wake Forest, Clayton, and surrounding Triangle areas within 50+ miles. Professional pressure washing for residential and commercial properties.">

  <main class="service-areas-page">
    <!-- Hero Section -->
    <section class="areas-hero">
      <div class="hero-content">
        <h1>Service Areas in the Triangle</h1>
        <p class="hero-subtitle">Professional pressure washing services throughout Knightdale, Raleigh, Cary, Wake Forest, Clayton, and surrounding areas within 50+ miles</p>
      </div>
    </section>

    <!-- Primary Service Area -->
    <section class="primary-area">
      <div class="container">
        <h2>Proudly Based in Knightdale, NC</h2>
        <p class="primary-intro">Reimagine Pro Wash & More is a locally owned and operated pressure washing company serving homeowners and businesses throughout the Greater Triangle area. While we're based in Knightdale, our service radius extends 50+ miles to bring professional exterior cleaning to communities across Wake County and beyond.</p>
      </div>
    </section>

    <!-- Cities Grid -->
    <section class="cities-section">
      <div class="container">
        <h2>Cities We Serve</h2>
        <p class="section-intro">Click on your city to learn more about our services in your area:</p>

        <div class="cities-grid">
          {cities.map((city) => (
            <article class="city-card">
              <h3>{city.name}</h3>
              <p>{city.description}</p>
              <a href={`/service-areas/${city.slug}`} class="city-link">
                View Services in {city.name.split(',')[0]} →
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Services Overview -->
    <section class="services-overview">
      <div class="container">
        <h2>Services Available in All Areas</h2>
        <div class="services-list">
          <div class="service-item">
            <h3>Residential Services</h3>
            <ul>
              <li>House Washing (Soft Wash)</li>
              <li>Roof Cleaning</li>
              <li>Driveway & Hardscape Cleaning</li>
              <li>Gutter Cleaning</li>
              <li>Deck & Fence Restoration</li>
              <li>Pool Deck & Patio Cleaning</li>
              <li>Brick Restoration</li>
            </ul>
          </div>
          <div class="service-item">
            <h3>Commercial Services</h3>
            <ul>
              <li>Building Washing</li>
              <li>Parking Lot Cleaning</li>
              <li>Sidewalk & Walkway Cleaning</li>
              <li>Storefront Cleaning</li>
              <li>Graffiti Removal</li>
              <li>Fleet Washing</li>
              <li>Regular Maintenance Programs</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Coverage Map Info -->
    <section class="coverage-section">
      <div class="container">
        <h2>50+ Mile Service Radius</h2>
        <p>While we've highlighted our primary service cities, we proudly serve properties throughout Wake County and surrounding areas including:</p>
        <div class="coverage-areas">
          <div class="coverage-column">
            <ul>
              <li>Apex</li>
              <li>Garner</li>
              <li>Holly Springs</li>
              <li>Morrisville</li>
              <li>Fuquay-Varina</li>
            </ul>
          </div>
          <div class="coverage-column">
            <ul>
              <li>Durham</li>
              <li>Chapel Hill</li>
              <li>Wendell</li>
              <li>Zebulon</li>
              <li>Rolesville</li>
            </ul>
          </div>
          <div class="coverage-column">
            <ul>
              <li>Smithfield</li>
              <li>Angier</li>
              <li>Willow Spring</li>
              <li>And many more!</li>
            </ul>
          </div>
        </div>
        <p class="coverage-note"><strong>Not sure if we serve your area?</strong> Contact us! We're happy to discuss service availability for your location.</p>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="areas-cta">
      <div class="container">
        <h2>Ready to Schedule Service in Your Area?</h2>
        <p>Get a free, no-obligation estimate for professional pressure washing services.</p>
        <div class="cta-buttons">
          <a href="/#contact" class="btn-primary">Request Free Quote</a>
          <a href="tel:9842024980" class="btn-secondary">Call (984) 202-4980</a>
        </div>
        <p class="satisfaction">100% Satisfaction Guarantee | Licensed & Insured</p>
      </div>
    </section>
  </main>
</HomeLayout>

<style>
  .service-areas-page {
    min-height: 100vh;
  }

  .areas-hero {
    background: linear-gradient(135deg, #092441 0%, #0862b7 50%, #00a1f0 100%);
    color: white;
    padding: 140px 20px 80px;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .areas-hero h1 {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 20px;
    font-family: 'Arial', sans-serif;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.95;
    line-height: 1.7;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .primary-area {
    padding: 80px 20px;
    background: white;
    text-align: center;
  }

  .primary-area h2 {
    font-size: 2.5rem;
    color: #003366;
    margin-bottom: 25px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
  }

  .primary-intro {
    font-size: 1.15rem;
    color: #666;
    line-height: 1.8;
    max-width: 900px;
    margin: 0 auto;
  }

  .cities-section {
    padding: 100px 20px;
    background: #f8f9fa;
  }

  .cities-section h2 {
    font-size: 2.5rem;
    color: #003366;
    text-align: center;
    margin-bottom: 20px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
  }

  .section-intro {
    text-align: center;
    font-size: 1.15rem;
    color: #666;
    margin-bottom: 60px;
  }

  .cities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .city-card {
    background: white;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    text-align: center;
  }

  .city-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .city-card h3 {
    font-size: 1.8rem;
    color: #003366;
    margin-bottom: 15px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
  }

  .city-card p {
    color: #666;
    line-height: 1.7;
    margin-bottom: 25px;
  }

  .city-link {
    color: #00a1f0;
    font-weight: 600;
    text-decoration: none;
    font-size: 1.05rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .city-link:hover {
    color: #0862b7;
    transform: translateX(5px);
  }

  .services-overview {
    padding: 100px 20px;
    background: white;
  }

  .services-overview h2 {
    font-size: 2.5rem;
    color: #003366;
    text-align: center;
    margin-bottom: 60px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
  }

  .services-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 60px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .service-item {
    background: #f8f9fa;
    padding: 40px;
    border-radius: 12px;
  }

  .service-item h3 {
    font-size: 1.6rem;
    color: #003366;
    margin-bottom: 25px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
    text-align: center;
  }

  .service-item ul {
    list-style: none;
    padding: 0;
  }

  .service-item li {
    padding: 10px 0;
    padding-left: 30px;
    position: relative;
    color: #333;
    line-height: 1.6;
  }

  .service-item li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #00a1f0;
    font-weight: bold;
    font-size: 1.2rem;
  }

  .coverage-section {
    padding: 100px 20px;
    background: #f8f9fa;
  }

  .coverage-section h2 {
    font-size: 2.5rem;
    color: #003366;
    text-align: center;
    margin-bottom: 30px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
  }

  .coverage-section > .container > p {
    text-align: center;
    font-size: 1.15rem;
    color: #666;
    margin-bottom: 50px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .coverage-areas {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: 900px;
    margin: 0 auto 40px;
  }

  .coverage-column ul {
    list-style: none;
    padding: 0;
  }

  .coverage-column li {
    padding: 8px 0;
    color: #333;
    font-size: 1.05rem;
  }

  .coverage-note {
    text-align: center;
    font-size: 1.1rem;
    color: #003366;
    margin-top: 40px;
  }

  .areas-cta {
    padding: 100px 20px;
    background: linear-gradient(135deg, #092441 0%, #0862b7 100%);
    color: white;
    text-align: center;
  }

  .areas-cta h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
  }

  .areas-cta p {
    font-size: 1.2rem;
    margin-bottom: 40px;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .btn-primary, .btn-secondary {
    padding: 15px 40px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    font-size: 1.05rem;
  }

  .btn-primary {
    background: white;
    color: #092441;
  }

  .btn-primary:hover {
    background: #00a1f0;
    color: white;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: white;
    color: #092441;
    transform: translateY(-2px);
  }

  .satisfaction {
    font-size: 1.05rem;
    opacity: 0.9;
    font-weight: 600;
  }

  @media (max-width: 1024px) {
    .services-list {
      grid-template-columns: 1fr;
    }

    .coverage-areas {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .areas-hero h1 {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .primary-area h2,
    .cities-section h2,
    .services-overview h2,
    .coverage-section h2,
    .areas-cta h2 {
      font-size: 2rem;
    }

    .cities-grid {
      grid-template-columns: 1fr;
    }

    .coverage-areas {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary, .btn-secondary {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
