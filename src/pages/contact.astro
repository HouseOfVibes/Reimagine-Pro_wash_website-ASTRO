    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .contact-info-section h2,
  .contact-form-section h2 {
    font-family: 'Poppins', sans-serif;
    font-size: 2rem;
    font-weight: bold;
    color: var(--navy-blue);
    margin-bottom: 15px;
  }

  .section-intro {
    font-size: 1.1rem;
    color: var(--mid-gray);
    margin-bottom: 40px;
