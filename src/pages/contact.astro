    color: var(--pure-white);
    border: none;
    border-radius: 8px;
    font-family: 'Poppins', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 161, 240, 0.3);
  }

  .privacy-note {
    font-size: 0.9rem;
    color: var(--mid-gray);
    line-height: 1.6;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 3px solid var(--primary-blue);
  }

  .privacy-note i {
    color: var(--primary-blue);
    margin-right: 8px;
  }

