<script>
  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contact-form') as HTMLFormElement | null;
    const successMessage = document.getElementById('form-success');
    const errorMessage = document.getElementById('form-error');
    const submitBtn = document.getElementById('submit-btn');
    const btnText = submitBtn?.querySelector('.btn-text');
    const btnLoading = submitBtn?.querySelector('.btn-loading');

    // Validation rules
    const validators = {
      name: (value: string) => {
        if (!value.trim()) return 'Please enter your full name';
        if (value.trim().length < 2) return 'Name must be at least 2 characters';
        return '';
      },
      email: (value: string) => {
        if (!value.trim()) return 'Please enter your email address';
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(value)) return 'Please enter a valid email address';
        return '';
      },
      phone: (value: string) => {
        if (!value.trim()) return 'Please enter your phone number';
        const phoneClean = value.replace(/[\s\-\(\)\+]/g, '');
        if (phoneClean.length < 10) return 'Please enter a valid phone number';
        return '';
      },
      service: (value: string) => {
        if (!value) return 'Please select a service';
        return '';
      }
    };

    // Validate a single field
    function validateField(name: string, value: string): boolean {
      const validator = validators[name as keyof typeof validators];
      if (!validator) return true;

      const error = validator(value);
      const errorElement = document.getElementById(`${name}-error`);
      const inputElement = document.getElementById(name);

      if (errorElement) {
        errorElement.textContent = error;
      }

      if (inputElement) {
        inputElement.classList.remove('error', 'valid');
        if (error) {
          inputElement.classList.add('error');
        } else if (value.trim()) {
          inputElement.classList.add('valid');
        }
      }

      return !error;
    }

    // Add real-time validation on blur
    if (contactForm) {
      const inputs = contactForm.querySelectorAll('input, select');
      inputs.forEach((input) => {
        input.addEventListener('blur', function(e) {
          const target = e.target as HTMLInputElement | HTMLSelectElement;
          validateField(target.name, target.value);
        });

        // Clear error on input
        input.addEventListener('input', function(e) {
          const target = e.target as HTMLInputElement | HTMLSelectElement;
          const errorElement = document.getElementById(`${target.name}-error`);
          if (errorElement) errorElement.textContent = '';
          target.classList.remove('error');
        });
      });

      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();

        // Check honeypot - if filled, it's likely spam
        const honeypot = (document.getElementById('website') as HTMLInputElement)?.value;
        if (honeypot) {
          // Silently ignore spam submissions
          console.log('Spam submission blocked');
          return;
        }

        const formData = new FormData(contactForm);
        let isValid = true;

        // Validate all required fields
        ['name', 'email', 'phone', 'service'].forEach((fieldName) => {
          const value = formData.get(fieldName) as string || '';
          if (!validateField(fieldName, value)) {
            isValid = false;
          }
        });

        // Hide any existing messages
        if (successMessage) successMessage.style.display = 'none';
        if (errorMessage) errorMessage.style.display = 'none';

        if (!isValid) {
          if (errorMessage) errorMessage.style.display = 'flex';
          // Focus first error field
          const firstError = contactForm.querySelector('.error') as HTMLElement;
          if (firstError) firstError.focus();
          return;
        }

        // Show loading state
        if (submitBtn) submitBtn.setAttribute('disabled', 'true');
        if (btnText) (btnText as HTMLElement).style.display = 'none';
        if (btnLoading) (btnLoading as HTMLElement).style.display = 'inline';

        const name = formData.get('name');
        const email = formData.get('email');
        const phone = formData.get('phone');
        const service = formData.get('service');
        const location = formData.get('location');
        const message = formData.get('message');

        const subject = encodeURIComponent(`Quote Request from ${name}`);
        const body = encodeURIComponent(
          `Name: ${name}\n` +
          `Email: ${email}\n` +
          `Phone: ${phone}\n` +
          `Service Needed: ${service}\n` +
          `Property Location: ${location || 'Not specified'}\n\n` +
          `Project Details:\n${message || 'N/A'}`
        );

        const mailtoLink = `mailto:info@rprowashnc.com?subject=${subject}&body=${body}`;

        // Track form submission in GA4
        if (typeof gtag === 'function') {
          gtag('event', 'generate_lead', {
            'event_category': 'Contact',
            'event_label': service,
            'value': 1
          });
        }

        // Show success message
        if (successMessage) successMessage.style.display = 'flex';

        // Open mailto link
        window.location.href = mailtoLink;

        // Reset form after a short delay
        setTimeout(() => {
          contactForm.reset();
          if (submitBtn) submitBtn.removeAttribute('disabled');
          if (btnText) (btnText as HTMLElement).style.display = 'inline';
          if (btnLoading) (btnLoading as HTMLElement).style.display = 'none';

          // Clear validation states
          contactForm.querySelectorAll('.valid, .error').forEach(el => {
            el.classList.remove('valid', 'error');
          });
        }, 1000);
      });
    }
  });
</script>
