---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Thank You | Reimagine Pro Wash & More"
  description="Thank you for requesting a quote from Reimagine Pro Wash & More. We'll be in touch soon to confirm the details of your project."
>
  <section class="thank-you-section">
    <div class="thank-you-card">
      <h1>Thank You!</h1>
      <p>We've received your request for a quote and will contact you shortly to confirm the details.</p>
      <p>If you need immediate assistance, please call us at <a href="tel:9842024980">(984) 202-4980</a>.</p>
      <div class="thank-you-actions">
        <a class="btn-primary" href="/">Return Home</a>
        <a class="btn-secondary" href="/services">Explore Services</a>
      </div>
    </div>
  </section>

  <style>
    .thank-you-section {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 6rem 1.5rem;
      background: var(--light-gray);
      min-height: calc(100vh - 200px);
    }

    .thank-you-card {
      background: var(--white);
      border-radius: 20px;
      box-shadow: 0 25px 60px rgba(0, 161, 240, 0.1);
      max-width: 640px;
      padding: 3rem;
      text-align: center;
    }

    .thank-you-card h1 {
      font-size: clamp(2.25rem, 5vw, 3rem);
      margin-bottom: 1rem;
    }

    .thank-you-card p {
      font-size: 1.1rem;
      color: var(--gray);
      margin-bottom: 1.5rem;
    }

    .thank-you-card a {
      color: inherit;
    }

    .thank-you-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 1.5rem;
    }

    .thank-you-actions .btn-primary,
    .thank-you-actions .btn-secondary {
      border-radius: 999px;
      padding: 0.85rem 2rem;
      font-weight: 600;
      text-decoration: none;
    }

    .thank-you-actions .btn-primary {
      background: var(--gradient-cta);
      color: var(--white);
      box-shadow: 0 12px 24px rgba(0, 161, 240, 0.25);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .thank-you-actions .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 16px 30px rgba(0, 161, 240, 0.3);
    }

    .thank-you-actions .btn-secondary {
      background: transparent;
      border: 2px solid var(--primary-blue);
      color: var(--primary-blue);
      transition: background 0.3s ease, color 0.3s ease;
    }

    .thank-you-actions .btn-secondary:hover {
      background: var(--primary-blue);
      color: var(--white);
    }

    @media (max-width: 600px) {
      .thank-you-card {
        padding: 2rem;
      }

      .thank-you-card p {
        font-size: 1rem;
      }
    }
  </style>
</Layout>
