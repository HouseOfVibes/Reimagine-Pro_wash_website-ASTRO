---
import { Image, getImage } from 'astro:assets';
import logo from '../../public/images/logo.png';
import heroBackground from '../../public/images/69E0CDE5-41D5-425B-A9ED-0A1634AD7D4B.png';
import insuredBadge from '../../public/images/Insured_ Badge_Transparent.png';
import ecoFriendlyBadge from '../../public/images/RPW-Eco-Friendy-Badge.png';
import multiPanelCollage from '../../public/images/RPW-Dynamic_multi-panel_before-and-after_collage_five_0 copy.png';
import poolDeck from '../../public/images/UnderGround_Pool_Deck_Cleaning.png';
import houseWashing from '../../public/images/House Washing.png';
import hardscapes from '../../public/images/Hardscapes Cleaning.png';
import gutterCleaning from '../../public/images/gutter cleaning.png';
import commercial from '../../public/images/Commercial Pressure Washing.png';
import deckRestoration from '../../public/images/Clean_Wooden_Sitting_Deck.png';
import fenceCleaning from '../../public/images/Clean Fense.png';
import brickRestoration from '../../public/images/Brick Restoration.png';
import graffitiRemoval from '../../public/images/Before and After- Graffiti Removal.png';

const heroBackgroundWebp = await getImage({
    src: heroBackground,
    format: 'webp',
    width: 1920,
    quality: 72,
});

const heroBackgroundPng = await getImage({
    src: heroBackground,
    format: 'png',
    width: 1920,
});

const heroBackgroundImageSet = `image-set(url('${heroBackgroundWebp.src}') type('image/webp') 1x, url('${heroBackgroundPng.src}') type('image/png') 1x)`;
const heroBackgroundFallbackValue = `url('${heroBackgroundPng.src}')`;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reimagine Pro Wash - Professional Pressure Washing Services | Knightdale, NC</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            /* Primary Brand Colors */
            --primary-blue: #00a1f0;
            --navy-blue: #092441;
            --deep-blue: #003463;
            --medium-blue: #0862b7;
            --light-blue: #6ccdf7;
            
            /* Neutrals */
            --silver: #95a3ae;
            --charcoal: #04070c;
            --mid-gray: #737a7e;
            --teal-gray: #8b99a0;
            --off-white: #fefefb;
            --pure-white: #ffffff;
            
            /* Brand Gradients */
            --gradient-primary: linear-gradient(135deg, #092441 0%, #003463 50%, #00a1f0 100%);
            --gradient-cta: linear-gradient(135deg, #00a1f0 0%, #0862b7 100%);
            --gradient-cta-hover: linear-gradient(135deg, #6ccdf7 0%, #00a1f0 100%);
            --gradient-overlay-dark: linear-gradient(135deg, rgba(4,7,12,0.8) 0%, rgba(9,36,65,0.6) 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            line-height: 1.6;
            color: var(--charcoal);
            padding-top: 75px;
        }

        /* Header Styles */
        .rpw-main-header {
            background: var(--pure-white);
            box-shadow: 0 2px 20px rgba(9, 36, 65, 0.1);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .rpw-main-header.scrolled {
            box-shadow: 0 2px 30px rgba(9, 36, 65, 0.15);
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }

        .rpw-top-bar {
            background: var(--gradient-primary);
            color: var(--off-white);
            padding: 8px 0;
            font-size: 0.85rem;
        }

        .rpw-top-bar-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .rpw-top-bar-left {
            display: flex;
            align-items: center;
            gap: 25px;
        }

        .rpw-top-bar-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
        }

        .rpw-top-bar-item i {
            color: var(--light-blue);
        }

        .rpw-top-bar-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .rpw-social-link-top {
            color: var(--off-white);
            font-size: 1rem;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .rpw-social-link-top:hover {
            color: var(--light-blue);
            transform: translateY(-1px);
        }

        .rpw-main-nav {
            padding: 10px 0;
        }

        .rpw-nav-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .rpw-logo-container {
            display: flex;
            align-items: center;
        }

        .rpw-brand-text {
            font-family: 'Poppins', sans-serif;
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--navy-blue);
            text-decoration: none;
            letter-spacing: -0.02em;
            transition: color 0.3s ease;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .rpw-brand-text:hover {
            opacity: 0.8;
        }

        .rpw-brand-tagline {
            font-size: 0.65rem;
            font-weight: 400;
            color: var(--primary-blue);
            margin-top: -5px;
            letter-spacing: 0.1em;
            text-transform: uppercase;
        }

        .rpw-nav-menu {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            align-items: center;
            gap: 35px;
        }

        .rpw-nav-item {
            position: relative;
        }

        .rpw-nav-link {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            font-size: 1rem;
            color: var(--navy-blue);
            text-decoration: none;
            padding: 10px 0;
            position: relative;
            transition: all 0.3s ease;
        }

        .rpw-nav-link::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(135deg, #0862b7 0%, #00a1f0 50%, #6ccdf7 100%);
            transition: width 0.3s ease;
        }

        .rpw-nav-link:hover {
            color: var(--primary-blue);
        }

        .rpw-nav-link:hover::after,
        .rpw-nav-link.active::after {
            width: 100%;
        }

        .rpw-header-cta {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .rpw-phone-header {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--navy-blue);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .rpw-phone-header:hover {
            color: var(--primary-blue);
        }

        .rpw-phone-header i {
            color: var(--primary-blue);
            font-size: 1.1rem;
        }

        .rpw-cta-button {
            background: linear-gradient(135deg, #0862b7 0%, #00a1f0 50%, #6ccdf7 100%);
            color: var(--pure-white);
            padding: 12px 25px;
            border-radius: 25px;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            font-size: 0.95rem;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 161, 240, 0.3);
            border: none;
            cursor: pointer;
        }

        .rpw-cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 161, 240, 0.4);
        }

        .rpw-mobile-menu-toggle {
            display: none;
            flex-direction: column;
            cursor: pointer;
            padding: 5px;
            background: none;
            border: none;
        }

        .rpw-hamburger {
            width: 25px;
            height: 3px;
            background: var(--navy-blue);
            margin: 3px 0;
            transition: 0.3s;
            border-radius: 2px;
        }

        .rpw-mobile-menu-toggle.active .rpw-hamburger:nth-child(1) {
            transform: rotate(-45deg) translate(-5px, 6px);
        }

        .rpw-mobile-menu-toggle.active .rpw-hamburger:nth-child(2) {
            opacity: 0;
        }

        .rpw-mobile-menu-toggle.active .rpw-hamburger:nth-child(3) {
            transform: rotate(45deg) translate(-5px, -6px);
        }

        .rpw-mobile-menu {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: var(--pure-white);
            box-shadow: 0 5px 20px rgba(9, 36, 65, 0.1);
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }

        .rpw-mobile-menu.active {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .rpw-mobile-menu-content {
            padding: 20px;
        }

        .rpw-mobile-nav-menu {
            list-style: none;
            padding: 0;
            margin: 0 0 20px 0;
        }

        .rpw-mobile-nav-item {
            margin-bottom: 15px;
        }

        .rpw-mobile-nav-link {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            font-size: 1.1rem;
            color: var(--navy-blue);
            text-decoration: none;
            display: block;
            padding: 10px 0;
            border-bottom: 1px solid rgba(149, 163, 174, 0.1);
            transition: color 0.3s ease;
        }

        .rpw-mobile-nav-link:hover {
            color: var(--primary-blue);
        }

        .rpw-mobile-cta {
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }

        .rpw-mobile-phone {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--navy-blue);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .rpw-mobile-phone i {
            color: var(--primary-blue);
        }

        @media (max-width: 768px) {
            .rpw-top-bar {
                display: none;
            }

            body {
                padding-top: 60px;
            }

            .rpw-main-nav {
                padding: 8px 0;
                position: relative;
            }

            .rpw-brand-text {
                font-size: 1.2rem;
            }

            .rpw-brand-tagline {
                font-size: 0.55rem;
            }

            .rpw-nav-menu,
            .rpw-header-cta .rpw-phone-header {
                display: none;
            }

            .rpw-mobile-menu-toggle {
                display: flex;
            }

            .rpw-header-cta {
                gap: 10px;
            }

            .rpw-cta-button {
                padding: 10px 20px;
                font-size: 0.9rem;
            }

            .hero-logo img {
                max-width: 400px;
            }
        }

        @media (max-width: 480px) {
            .rpw-nav-content {
                padding: 0 15px;
            }

            .rpw-brand-text {
                font-size: 1rem;
            }

            .rpw-brand-tagline {
                font-size: 0.5rem;
            }

            .rpw-cta-button {
                padding: 8px 16px;
                font-size: 0.85rem;
            }

            .hero-logo img {
                max-width: 300px;
            }
        }

        .hero-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        /* Animated background image layer */
        .hero-section::after {
            content: '';
            position: absolute;
            top: -10%;
            left: -10%;
            right: -10%;
            bottom: -10%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-image: var(
                --hero-background-fallback,
                url('/images/69E0CDE5-41D5-425B-A9ED-0A1634AD7D4B.png')
            );
            background-image: var(
                --hero-background-image,
                var(
                    --hero-background-fallback,
                    url('/images/69E0CDE5-41D5-425B-A9ED-0A1634AD7D4B.png')
                )
            );
            z-index: 0;
            animation: waterMove 40s ease-in-out infinite;
        }

        @keyframes waterMove {
            0%, 100% {
                transform: translate(0, 0) scale(1.1);
            }
            25% {
                transform: translate(-2%, 1%) scale(1.12) rotate(0.5deg);
            }
            50% {
                transform: translate(2%, -1%) scale(1.1) rotate(-0.5deg);
            }
            75% {
                transform: translate(-1%, 2%) scale(1.11) rotate(0.3deg);
            }
        }

        /* Dark gradient overlay with animated water effects */
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                var(--gradient-overlay-dark),
                radial-gradient(ellipse at 20% 80%, rgba(108, 221, 247, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 20%, rgba(0, 161, 240, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 40% 40%, rgba(8, 98, 183, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 15% 30%, rgba(108, 221, 247, 0.2) 0%, transparent 15%),
                radial-gradient(circle at 85% 70%, rgba(0, 161, 240, 0.2) 0%, transparent 15%),
                radial-gradient(circle at 50% 50%, rgba(108, 221, 247, 0.15) 0%, transparent 20%),
                radial-gradient(circle at 30% 90%, rgba(0, 161, 240, 0.2) 0%, transparent 15%),
                radial-gradient(circle at 70% 10%, rgba(108, 221, 247, 0.15) 0%, transparent 15%);
            z-index: 1;
            animation: waterFlow 20s ease-in-out infinite;
            pointer-events: none;
        }

        @keyframes waterFlow {
            0%, 100% {
                transform: translateX(0px) translateY(0px);
                opacity: 1;
            }
            25% {
                transform: translateX(-15px) translateY(10px);
                opacity: 0.95;
            }
            50% {
                transform: translateX(15px) translateY(-10px);
                opacity: 1;
            }
            75% {
                transform: translateX(-10px) translateY(15px);
                opacity: 0.95;
            }
        }

        .hero-content {
            text-align: center;
            color: var(--off-white);
            max-width: 900px;
            padding: 2rem;
            position: relative;
            z-index: 2;
        }

        .hero-logo {
            margin-bottom: 2rem;
        }

        .hero-logo img {
            max-width: 500px;
            width: 100%;
            height: auto;
            mix-blend-mode: screen;
            filter: drop-shadow(0 0 30px rgba(108, 221, 247, 0.5)) drop-shadow(0 0 60px rgba(0, 161, 240, 0.3));
            animation: logoFloat 6s ease-in-out infinite;
        }

        @keyframes logoFloat {
            0%, 100% {
                transform: translateY(0px) scale(1);
            }
            50% {
                transform: translateY(-15px) scale(1.05);
            }
        }

        .hero-title {
            font-family: 'Poppins', sans-serif;
            font-size: clamp(3rem, 6vw, 5rem);
            font-weight: 800;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.3);
            letter-spacing: -0.02em;
            line-height: 1.1;
            white-space: nowrap;
            text-align: center;
            display: block;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-subtitle {
            font-family: 'Poppins', sans-serif;
            font-size: clamp(1.5rem, 3vw, 2rem);
            font-weight: 300;
            color: var(--light-blue);
            margin-bottom: 1.5rem;
            text-shadow: 1px 1px 4px rgba(0,0,0,0.3);
        }

        .hero-description {
            font-size: clamp(1.1rem, 2vw, 1.3rem);
            margin-bottom: 3rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            opacity: 0.95;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 3rem;
        }

        .btn-primary {
            background: var(--gradient-cta);
            color: var(--pure-white);
            padding: 1.2rem 2.5rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(0, 161, 240, 0.3);
            border: none;
            cursor: pointer;
            font-family: 'Poppins', sans-serif;
        }

        .btn-primary:hover {
            background: var(--gradient-cta-hover);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 161, 240, 0.4);
        }

        .btn-secondary {
            background: transparent;
            color: var(--off-white);
            padding: 1.2rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            border: 2px solid var(--light-blue);
            font-family: 'Poppins', sans-serif;
        }

        .btn-secondary:hover {
            background: var(--light-blue);
            color: var(--navy-blue);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(108, 221, 247, 0.3);
        }

        @media (max-width: 768px) {
            .hero-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn-primary, .btn-secondary {
                width: 100%;
                max-width: 300px;
            }
        }

        /* Results Showcase Section */
        .results-showcase-section {
            padding: 100px 20px;
            background: var(--gradient-primary);
        }

        .results-showcase-container {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .results-showcase-container h2 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--pure-white);
            margin-bottom: 1rem;
        }

        .results-subtitle {
            color: var(--light-blue);
            font-size: 1.2rem;
            margin-bottom: 50px;
        }

        .showcase-image-wrapper {
            margin-bottom: 40px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(9, 36, 65, 0.15);
            border: 3px solid var(--pure-white);
        }

        .showcase-image {
            width: 100%;
            height: auto;
            display: block;
        }

        .showcase-cta {
            margin-top: 40px;
        }

        .showcase-cta p {
            font-size: 1.3rem;
            color: var(--pure-white);
            margin-bottom: 20px;
            font-weight: 600;
        }

        .btn-showcase {
            display: inline-block;
            background: var(--gradient-cta);
            color: var(--pure-white);
            padding: 15px 40px;
            border-radius: 50px;
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(0, 161, 240, 0.3);
            border: 3px solid var(--pure-white);
        }

        .btn-showcase:hover {
            background: var(--gradient-cta-hover);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 161, 240, 0.4);
        }

        /* Before/After Slider */
        .before-after-slider {
            margin-bottom: 60px;
        }

        .before-after-slider h3 {
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--pure-white);
            margin-bottom: 0.5rem;
        }

        .slider-instruction {
            color: var(--light-blue);
            font-size: 1rem;
            margin-bottom: 40px;
        }

        .sliders-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .comparison-slider {
            position: relative;
        }

        .slider-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--pure-white);
            margin-bottom: 20px;
            text-align: center;
        }

        .comparison-image-wrapper {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(9, 36, 65, 0.15);
            user-select: none;
            height: 400px;
            background: #f0f0f0;
            border: 3px solid var(--pure-white);
        }

        .comparison-after {
            width: 100%;
            height: 100%;
            display: block;
            object-fit: cover;
            object-position: center;
        }

        .comparison-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 50%;
            height: 100%;
            overflow: hidden;
        }

        .comparison-before {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .comparison-slider-handle {
            position: absolute;
            top: 0;
            left: 50%;
            width: 4px;
            height: 100%;
            background: var(--pure-white);
            cursor: ew-resize;
            transform: translateX(-50%);
            z-index: 10;
        }

        .slider-line {
            position: absolute;
            top: 0;
            left: 50%;
            width: 2px;
            height: 100%;
            background: var(--pure-white);
            transform: translateX(-50%);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        .slider-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            background: var(--pure-white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            gap: 8px;
        }

        .slider-button i {
            color: var(--primary-blue);
            font-size: 1rem;
        }

        .slider-button i:first-child {
            margin-left: -2px;
        }

        .slider-button i:last-child {
            margin-right: -2px;
        }

        .comparison-labels {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            padding: 0 20px;
        }

        .comparison-labels span {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--navy-blue);
            padding: 10px 25px;
            border-radius: 25px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
