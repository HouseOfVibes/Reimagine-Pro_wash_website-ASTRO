<style>
  /* Page-specific styles for Homepage */

  /* Hero Section */
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    top: -10%;
    left: -10%;
    right: -10%;
    bottom: -10%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-image: var(--hero-background-fallback, url('/images/hero-background.png'));
    background-image: var(--hero-background-image, var(--hero-background-fallback, url('/images/hero-background.png')));
    z-index: 0;
    animation: waterMove 40s ease-in-out infinite;
  }

  @keyframes waterMove {
    0%, 100% { transform: translate(0, 0) scale(1.1); }
    25% { transform: translate(-2%, 1%) scale(1.12) rotate(0.5deg); }
    50% { transform: translate(2%, -1%) scale(1.1) rotate(-0.5deg); }
    75% { transform: translate(-1%, 2%) scale(1.11) rotate(0.3deg); }
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      var(--gradient-overlay-dark, linear-gradient(135deg, rgba(4,7,12,0.8) 0%, rgba(9,36,65,0.6) 100%)),
      radial-gradient(ellipse at 20% 80%, rgba(108, 221, 247, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 20%, rgba(0, 161, 240, 0.15) 0%, transparent 50%);
    z-index: 1;
    animation: waterFlow 8s linear infinite;
    pointer-events: none;
  }

  @keyframes waterFlow {
    0%, 100% { opacity: 1; filter: brightness(1) hue-rotate(0deg); }
    50% { opacity: 0.95; filter: brightness(1.05) hue-rotate(2deg); }
  }

  .hero-content {
    text-align: center;
    color: var(--off-white, #fefefb);
    max-width: 900px;
    padding: 2rem;
    position: relative;
    z-index: 2;
  }

  .hero-logo {
    margin-bottom: 2rem;
    padding-top: 3rem;
  }

  .hero-logo img {
    max-width: 500px;
    width: 100%;
    height: auto;
    mix-blend-mode: screen;
    filter: drop-shadow(0 0 30px rgba(108, 221, 247, 0.5)) drop-shadow(0 0 60px rgba(0, 161, 240, 0.3));
    animation: logoFloat 6s ease-in-out infinite;
  }

  @keyframes logoFloat {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-15px) scale(1.05); }
  }

  .hero-title {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 8px rgba(0,0,0,0.3);
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 300;
    color: var(--light-blue, #6ccdf7);
    margin-bottom: 1.5rem;
    text-shadow: 1px 1px 4px rgba(0,0,0,0.3);
  }

  .hero-description {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    margin-bottom: 3rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.95;
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .btn-primary {
    background: var(--gradient-cta, linear-gradient(135deg, #00a1f0 0%, #0862b7 100%));
    color: var(--pure-white, #ffffff);
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(0, 161, 240, 0.3);
    border: none;
    cursor: pointer;
    font-family: 'Poppins', sans-serif;
  }

  .btn-primary:hover {
    background: var(--gradient-cta-hover, linear-gradient(135deg, #6ccdf7 0%, #00a1f0 100%));
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 161, 240, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--off-white, #fefefb);
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
