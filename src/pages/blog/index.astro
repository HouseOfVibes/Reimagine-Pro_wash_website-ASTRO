---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout
  title="Pressure Washing Tips & Guides | Blog | Reimagine Pro Wash & More"
  description="Expert pressure washing tips, maintenance guides, and industry insights from Reimagine Pro Wash. Learn about exterior cleaning, seasonal maintenance, and property care in Knightdale, NC.">

  <main class="blog-main">
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="blog-hero-content">
        <h1>Pressure Washing Tips & Guides</h1>
        <p>Expert insights for maintaining your property in Knightdale, NC and the Triangle area</p>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="blog-section">
      <div class="blog-container">
        {sortedPosts.length > 0 ? (
          <div class="blog-grid">
            {sortedPosts.map((post) => (
              <article class="blog-card">
                <a href={`/blog/${post.slug}`} class="blog-card-link">
                  <div class="blog-card-image">
                    <img src={post.data.image} alt={post.data.title} loading="lazy" />
                    <span class="blog-category">{post.data.category}</span>
                  </div>
                  <div class="blog-card-content">
                    <div class="blog-meta">
                      <span class="blog-date">{new Date(post.data.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                      <span class="blog-author">by {post.data.author}</span>
                    </div>
                    <h2>{post.data.title}</h2>
                    <p>{post.data.description}</p>
                    <div class="blog-tags">
                      {post.data.tags.slice(0, 3).map((tag: string) => (
                        <span class="blog-tag">{tag}</span>
                      ))}
                    </div>
                    <span class="read-more">Read More â†’</span>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="no-posts">
            <p>No blog posts yet. Check back soon for expert tips and guides!</p>
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="blog-cta">
      <div class="blog-cta-content">
        <h2>Need Professional Pressure Washing?</h2>
        <p>While you're learning, let our experts handle your exterior cleaning needs.</p>
        <div class="cta-buttons">
          <a href="/contact" class="btn-primary">Get Free Quote</a>
          <a href="/gallery" class="btn-secondary">View Our Work</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .blog-main {
    min-height: 100vh;
  }

  .blog-hero {
    background: linear-gradient(135deg, #092441 0%, #0862b7 50%, #00a1f0 100%);
    color: white;
    padding: 120px 20px 60px;
    text-align: center;
    margin-top: 0;
  }

  .blog-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .blog-hero h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    font-family: 'Open Sans', sans-serif;
  }

  .blog-hero p {
    font-size: 1.2rem;
    opacity: 0.95;
    font-family: 'Open Sans', sans-serif;
  }

  .blog-section {
    padding: 80px 20px;
    background: #f8f9fa;
  }

  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 40px;
  }

  .blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .blog-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .blog-card-image {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.05);
  }

  .blog-category {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(0, 161, 240, 0.95);
    color: white;
    padding: 6px 15px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .blog-card-content {
    padding: 30px;
  }

  .blog-meta {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    font-size: 0.9rem;
    color: #666;
  }

  .blog-date {
    color: #00a1f0;
    font-weight: 600;
  }

  .blog-card h2 {
    font-size: 1.5rem;
    font-weight: bold;
    color: #003366;
    margin-bottom: 15px;
    line-height: 1.4;
    font-family: 'Open Sans', sans-serif;
  }

  .blog-card p {
    color: #4a4a4a;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
  }

  .blog-tag {
    background: #e9ecef;
    color: #495057;
    padding: 4px 12px;
    border-radius: 15px;
    font-size: 0.8rem;
  }

  .read-more {
    color: #00a1f0;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .blog-card:hover .read-more {
    text-decoration: underline;
  }

  .no-posts {
    text-align: center;
    padding: 60px 20px;
    background: white;
    border-radius: 12px;
  }

  .no-posts p {
    font-size: 1.2rem;
    color: #666;
  }

  .blog-cta {
    background: linear-gradient(135deg, #092441 0%, #0862b7 100%);
    color: white;
    padding: 80px 20px;
    text-align: center;
  }

  .blog-cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .blog-cta h2 {
    font-size: 2rem;
    margin-bottom: 20px;
    font-weight: bold;
    font-family: 'Open Sans', sans-serif;
  }

  .blog-cta p {
    font-size: 1.2rem;
    margin-bottom: 40px;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary, .btn-secondary {
    padding: 15px 40px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary {
    background: white;
    color: #092441;
  }

  .btn-primary:hover {
    background: #00a1f0;
    color: white;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: white;
    color: #092441;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .blog-hero h1 {
      font-size: 2rem;
    }

    .blog-hero p {
      font-size: 1.1rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }

    .blog-card-image {
      height: 200px;
    }

    .blog-cta h2 {
      font-size: 1.8rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary, .btn-secondary {
      width: 250px;
    }
  }
</style>
